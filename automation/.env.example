# SmolPot Automation Service Environment Configuration

# ===============================================
# BLOCKCHAIN CONFIGURATION
# ===============================================
# Abstract Testnet RPC URL
RPC_URL=https://api.testnet.abs.xyz

# SmolPotCore contract address
CONTRACT_ADDRESS=0x556243315999c079d3f1b2326d0ee508f6d92fc8

# ===============================================
# WORKER WALLET CONFIGURATION
# ===============================================
# CRITICAL: Keep this secure! Never share or commit to version control
# Private key for the worker wallet (must start with 0x)
WORKER_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Minimum balance to keep in worker wallet (in ETH)
MIN_WORKER_BALANCE=0.01

# ===============================================
# MONITORING CONFIGURATION
# ===============================================
# How often to check for winner drawing conditions (milliseconds) - 3 seconds for near-instant response
CHECK_INTERVAL=3000

# Minimum participants required before drawing winner
MIN_PARTICIPANTS=2

# Maximum consecutive errors before alerting
MAX_CONSECUTIVE_ERRORS=5

# ===============================================
# NOTIFICATION CONFIGURATION
# ===============================================
# Discord webhook URL for notifications (optional)
# Get this from Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# ===============================================
# LOGGING CONFIGURATION
# ===============================================
# Log level: error, warn, info, verbose, debug, silly
LOG_LEVEL=info

# Enable detailed logging
DEBUG_MODE=false

# ===============================================
# SECURITY CONFIGURATION
# ===============================================
# Enable/disable certain features for security
ENABLE_IDLE_REFUNDS=true
ENABLE_AUTOMATIC_FUNDING=false

# Gas price multiplier for priority (1.1 = 10% higher)
GAS_PRICE_MULTIPLIER=1.1

# ===============================================
# DEVELOPMENT/TESTING
# ===============================================
# Set to true to enable test mode (no real transactions)
TEST_MODE=false

# Enable verbose contract event logging
VERBOSE_EVENTS=true